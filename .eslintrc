{
  "extends": [ "plugin:prettier/recommended" ],
  "plugins": [ "prettier" ],
  "rules": {
    "prettier/prettier": ["error", { "singleQuote": true }]
  },
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module"
  },
  "parser": "@typescript-eslint/parser"
}
